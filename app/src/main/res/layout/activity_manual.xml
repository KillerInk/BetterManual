<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                xmlns:tools="http://schemas.android.com/tools"
                android:id="@+id/lRoot">

    <SurfaceView
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:id="@+id/surfaceView"
        />

    <com.obsidium.bettermanual.views.GridView
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:id="@+id/vGrid"
        />

    <TextView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        tools:text="Magnification"
        android:id="@+id/tvMagnification"
        android:layout_alignTop="@+id/surfaceView"
        android:layout_alignParentLeft="true"
        android:layout_alignLeft="@+id/surfaceView"
        android:textColor="@android:color/white"
        android:singleLine="true"
        android:layout_margin="2dp"
        android:textSize="18dp"
        android:layout_marginTop="2dp"/>

    <LinearLayout
        android:id="@+id/left_holder"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_centerVertical="false"
        android:orientation="vertical">

        <view
            android:id="@+id/ivMode"
            class="com.obsidium.bettermanual.views.ExposureModeView"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_alignLeft="@+id/surfaceView"
            android:layout_alignTop="@+id/surfaceView"
            android:layout_marginTop="2dp"
            android:layout_weight="1"
            android:clickable="true"
            android:minWidth="40dp"
            android:paddingBottom="6dp"
            android:paddingLeft="2dp"
            android:paddingRight="6dp"
            android:paddingTop="6dp"
            android:scaleType="center" />

        <view
            android:id="@+id/ivDriveMode"
            class="com.obsidium.bettermanual.views.DriveMode"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_alignLeft="@+id/ivMode"
            android:layout_below="@+id/ivMode"
            android:layout_weight="1"
            android:clickable="true"
            android:minWidth="40dp"
            android:paddingBottom="6dp"
            android:paddingLeft="2dp"
            android:paddingRight="6dp"
            android:paddingTop="6dp"
            android:scaleType="center" />

        <ImageView
            android:id="@+id/ivTimelapse"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_alignLeft="@+id/ivDriveMode"
            android:layout_below="@+id/ivDriveMode"
            android:layout_marginTop="12dp"
            android:layout_weight="1"
            android:clickable="true"
            android:minWidth="40dp"
            android:paddingBottom="6dp"
            android:paddingLeft="2dp"
            android:paddingRight="6dp"
            android:paddingTop="6dp"
            android:scaleType="center" />

        <ImageView
            android:id="@+id/ivBracket"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_alignLeft="@+id/ivTimelapse"
            android:layout_below="@+id/ivTimelapse"
            android:layout_marginTop="2dp"
            android:layout_weight="1"
            android:clickable="true"
            android:minWidth="40dp"
            android:paddingBottom="6dp"
            android:paddingLeft="2dp"
            android:paddingRight="6dp"
            android:paddingTop="6dp"
            android:scaleType="center" />
    </LinearLayout>


    <TextView
        android:layout_width="fill_parent"
        android:layout_height="wrap_content"
        android:id="@+id/tvLog"
        android:layout_above="@+id/lInfoBottom"
        android:layout_alignTop="@+id/surfaceView"
        android:textSize="10dp"
        tools:text="Log"
        android:textColor="@android:color/white"
        android:layout_marginLeft="64dp"
        android:layout_marginTop="4dp"
        android:layout_marginRight="4dp"
        android:gravity="bottom"
        android:layout_marginBottom="4dp"/>

    <com.obsidium.bettermanual.views.PreviewNavView
        android:id="@+id/vPreviewNav"
        android:layout_width="75dp"
        android:layout_height="50dp"
        android:layout_above="@+id/bottom_holder"
        android:layout_alignParentBottom="false"
        android:layout_marginBottom="4dp"
        android:layout_marginLeft="4dp" />

    <TextView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:textAppearance="?android:attr/textAppearanceLarge"
        tools:text="Msg"
        android:id="@+id/tvMsg"
        android:layout_centerVertical="true"
        android:layout_centerHorizontal="true"
        android:textSize="38dp"
        android:textColor="@android:color/white"/>

    <com.obsidium.bettermanual.views.HistogramView
        android:id="@+id/vHist"
        android:layout_width="76dp"
        android:layout_height="40dp"
        android:layout_above="@+id/bottom_holder"
        android:layout_alignParentBottom="false"
        android:layout_alignParentRight="true"
        android:layout_marginRight="2dp"
        tools:background="#fcf75c" />

    <LinearLayout
        android:id="@+id/lFocusScale"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_above="@+id/bottom_holder"
        android:layout_centerHorizontal="true"
        android:layout_marginBottom="10dp"
        android:layout_marginLeft="32dp"
        android:layout_marginRight="32dp"
        android:orientation="horizontal">

        <ImageView
            android:id="@+id/ivFocusLeft"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginRight="4dp" />

        <com.obsidium.bettermanual.views.FocusScaleView
            android:id="@+id/vFocusScale"
            android:layout_width="156dp"
            android:layout_height="20dp"
            android:layout_alignParentBottom="true"
            android:layout_centerHorizontal="true"
            tools:background="#32722f" />

        <ImageView
            android:id="@+id/ivFocusRight"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginLeft="4dp" />

    </LinearLayout>

    <LinearLayout
        android:id="@+id/bottom_holder"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_alignParentBottom="true"
        android:clickable="false"
        android:orientation="horizontal">

        <com.obsidium.bettermanual.views.ShutterView
            android:id="@+id/tvShutter"
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:layout_weight="1"
            android:clickable="true"
            android:gravity="bottom|center"
            android:paddingTop="12dp"
            android:singleLine="true"
            android:textAppearance="?android:attr/textAppearanceMedium"
            android:textColor="@android:color/white"
            android:textSize="22dp"
            tools:background="#f86d6d"
            tools:text="Shutter" />

        <com.obsidium.bettermanual.views.ApertureView
            android:id="@+id/tvAperture"
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:layout_gravity="bottom"
            android:layout_weight="1"
            android:clickable="true"
            android:gravity="bottom|center"
            android:paddingTop="12dp"
            android:textAppearance="?android:attr/textAppearanceMedium"
            android:textColor="@android:color/white"
            android:textSize="22dp"
            tools:background="#87f083"
            tools:text="Aperture" />

        <com.obsidium.bettermanual.views.IsoView
            android:id="@+id/tvISO"
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:layout_weight="1"
            android:clickable="true"
            android:gravity="bottom|center"
            android:paddingTop="12dp"
            android:textAppearance="?android:attr/textAppearanceMedium"
            android:textColor="@android:color/white"
            android:textSize="22dp"
            tools:background="#90a0fa"
            tools:text="ISO" />

        <com.obsidium.bettermanual.views.EvView
            android:id="@+id/tvExposureCompensation"
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:layout_weight="1"
            android:clickable="true"
            android:gravity="bottom|center"
            android:paddingTop="12dp"
            android:textAppearance="?android:attr/textAppearanceMedium"
            android:textColor="@android:color/white"
            android:textSize="22dp"
            tools:background="#502080"
            tools:text="EV" />

        <TextView
            android:id="@+id/tvExposure"
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:layout_weight="1"
            android:clickable="true"
            android:gravity="bottom|center"
            android:textAppearance="?android:attr/textAppearanceMedium"
            android:textColor="@android:color/white"
            android:textSize="22dp"
            tools:background="#502080"
            tools:text="EV" />
    </LinearLayout>

    <TextView
        android:layout_width="fill_parent"
        android:layout_height="wrap_content"
        android:textAppearance="?android:attr/textAppearanceLarge"
        tools:text="Hint"
        android:id="@+id/tvHint"
        android:layout_alignParentTop="true"
        android:layout_centerHorizontal="true"
        android:layout_margin="4dp"
        android:gravity="center_horizontal"
        android:ellipsize="none"/>

</RelativeLayout>