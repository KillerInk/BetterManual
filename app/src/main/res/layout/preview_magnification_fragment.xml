<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent" android:layout_height="match_parent"
    xmlns:tools="http://schemas.android.com/tools">

    <com.obsidium.bettermanual.views.StarDriftAlginView
        android:id="@+id/stardriftalgin"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content" />

    <TextView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:id="@+id/tvMagnification"
        android:layout_alignParentLeft="true"
        android:textColor="@android:color/white"
        android:singleLine="true"
        android:layout_margin="2dp"
        android:textSize="18dp"
        android:layout_marginTop="2dp"/>

    <com.obsidium.bettermanual.views.PreviewNavView
        android:id="@+id/vPreviewNav"
        android:layout_width="75dp"
        android:layout_height="50dp"
        android:layout_alignParentBottom="true"
        android:layout_marginBottom="4dp"
        android:layout_marginLeft="4dp" />

    <LinearLayout
        android:id="@+id/lFocusScale"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_alignParentBottom="true"
        android:layout_centerHorizontal="true"
        android:layout_marginBottom="10dp"
        android:layout_marginLeft="32dp"
        android:layout_marginRight="32dp"
        android:orientation="horizontal">

        <ImageView
            android:id="@+id/ivFocusLeft"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginRight="4dp" />

        <com.obsidium.bettermanual.views.FocusScaleView
            android:id="@+id/vFocusScale"
            android:layout_width="156dp"
            android:layout_height="20dp"
            android:layout_alignParentBottom="true"
            android:layout_centerHorizontal="true"
            tools:background="#32722f" />

        <ImageView
            android:id="@+id/ivFocusRight"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginLeft="4dp" />

    </LinearLayout>
</RelativeLayout>